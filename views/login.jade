extends ./layouts/auth

block content
  .bg-gray-300(style='font-family:Roboto')
    .w-full.h-screen.flex.items-center.justify-center
      form.w-full.bg-white.rounded-lg(class='md:w-1/3' method="POST" action="/login")
        .flex.font-bold.justify-center.mt-6
          img.h-20.w-20(src='https://raw.githubusercontent.com/sefyudem/Responsive-Login-Form/master/img/avatar.svg')
        h2.text-3xl.text-center.text-gray-700.mb-4 Admin
        p.text-red-500.text-center.mb-5= message
        .px-12.pb-10
          .w-full.mb-2
            .flex.items-center
              i.ml-3.fill-current.text-gray-400.text-xs.z-10.fas.fa-user
              input.-mx-6.px-8.w-full.border.rounded.px-3.py-2.text-gray-700(type='text' placeholder='Username' name="username" class='focus:outline-none')
          .w-full.mb-2
            .flex.items-center
              i.ml-3.fill-current.text-gray-400.text-xs.z-10.fas.fa-lock
              input.-mx-6.px-8.w-full.border.rounded.px-3.py-2.text-gray-700(type='password' placeholder='Password' name="password" class='focus:outline-none')
          a.text-xs.text-gray-500.float-right.mb-4(href='/register') I don't have an account!
          button.w-full.py-2.rounded-full.bg-green-600.text-gray-100(type='submit' class='focus:outline-none') Sign in
